@model Skill

@{
    ViewData["Title"] = "CreateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h5 class="page-title">Yetenekler</h5>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Yetenek Ekle</div>
                    </div>
                    <div class="card-body">
                        <form asp-action="CreateSkill" method="post">
                            <div class="form-group">
                                <label asp-for="Title">Yetenek İsmi</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Value">Yetenek Seviyesi</label>
                                <select asp-for="Value" class="form-control">
                                    @for (int i = 0; i <= 100; i += 5)
                                    {
                                        <option value="@i">@i%</option>
                                    }
                                </select>
                                <span asp-validation-for="Value" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
