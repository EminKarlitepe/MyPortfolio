@model Skill

@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yetenekler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenek Ekle</div>
                    </div>
                    <div class="card-body">

                        <form asp-action="UpdateSkill" method="post">
                            <input type="hidden" asp-for="SkillId" />

                            <div class="form-group">
                                <label asp-for="Title">Yetenek Adı</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Value">Yetenek Seviyesi</label>
                                <select asp-for="Value" class="form-control">
                                    @for (int i = 0; i <= 100; i += 5)
                                    {
                                        var selected = (Model != null && i == Model.Value) ? "selected" : "";
                                        <option value="@i" selected>@i%</option>
                                    }
                                </select>
                                <span asp-validation-for="Value" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
